generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model Book {
  id                String   @id @default(uuid())
  title             String
  author            String
  isbn              String   @unique
  availableQuantity Int      @default(0)
  shelfLocation     String?

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@index([title])
  @@index([author])
  @@index([isbn])
}

model Borrower {
  id                String   @id @default(uuid())
  name              String
  email             String   @unique
  registeredDate    DateTime @default(now())
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}